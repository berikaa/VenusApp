<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hatic.venus.MenuActivity"
    android:background="@drawable/arkaplan9">


    <TextView
        android:text="Ayarlar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView8"
        android:layout_marginLeft="15dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:typeface="sans"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif"
        android:textSize="40sp" />

    <Button
        android:text="Profil Ayarları"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_height="60dp"
        android:id="@+id/profil"
        android:textSize="16sp"
        android:fontFamily="sans-serif-medium"
        android:visibility="visible"
        android:elevation="0dp"
        style="@style/Widget.AppCompat.Button"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/textView8"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        android:background="?android:attr/selectableItemBackground" />


    <Button
        android:text="Hakkında"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/profil"
        android:layout_alignRight="@+id/profil"
        android:layout_alignEnd="@+id/profil"
        android:layout_marginTop="10dp"
        android:id="@+id/hakkinda"
        android:textSize="16sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAlignment="viewStart"
        android:background="?android:attr/selectableItemBackground"/>



    <Switch
        android:text="SES"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch2"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/switch1"
        android:layout_marginTop="35dp"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Switch
        android:text="BİLDİRİM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/switch1"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/hakkinda"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <Button
        android:text="Çıkış"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/cikis"
        android:textSize="16sp"
        android:textAlignment="viewStart"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/switch2"
        android:layout_alignLeft="@+id/switch2"
        android:layout_alignStart="@+id/switch2"
        android:onClick="cikis"/>

</RelativeLayout>
